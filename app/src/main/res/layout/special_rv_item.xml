<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:backgroundTint="@color/products_background_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:background="@color/products_background_color"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_imageSpecialRvItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp">

            <ImageView
                android:id="@+id/imageSpecialRvItem"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:scaleType="fitXY"
                android:layout_margin="2dp"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvSpecialProductName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Scotch Premium"
            app:layout_constraintStart_toEndOf="@id/cv_imageSpecialRvItem"
            app:layout_constraintTop_toTopOf="@id/cv_imageSpecialRvItem"
            android:layout_marginTop="7dp"
            android:layout_marginStart="18dp"
            android:fontFamily="@font/poppins_thin"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/tvSpecialProductPrice"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="$1600"
            app:layout_constraintStart_toStartOf="@id/tvSpecialProductName"
            app:layout_constraintTop_toBottomOf="@id/tvSpecialProductName"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/sf_pro_display"/>

