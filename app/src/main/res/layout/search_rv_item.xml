<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:backgroundTint="@color/products_background_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_search_product"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp">

        <ImageView
            android:id="@+id/iv_productImage"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Bosdj Chaiie"
            android:textStyle="bold"
            android:textSize="@dimen/_20sdp"
            android:layout_toRightOf="@+id/cv_search_product"
            android:layout_marginLeft="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/tv_productDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Bosdj Chaiiejejrrjbjebhfkkwnk"
            android:layout_toRightOf="@+id/cv_search_product"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_below="@+id/tv_productName"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/tv_productActualPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$100"
            android:layout_toRightOf="@+id/cv_search_product"
            android:layout_below="@+id/tv_productDescription"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/tv_productOfferPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$50"
            android:layout_toRightOf="@+id/tv_productActualPrice"
            android:layout_below="@+id/tv_productDescription"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>