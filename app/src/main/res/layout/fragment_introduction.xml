<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/full_transparent_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_right_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/h4"
            android:layout_marginTop="@dimen/tvRightAddressMargin"
            android:text="@string/rightAddress"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tv_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_right_address"
            style="@style/h2"
            android:textAlignment="center"
            android:text="@string/quality"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btn_start"
            android:layout_width="@dimen/buttonStartWidth"
            android:layout_height="@dimen/buttonStartHeight"
            android:text="Start"
            style="@style/purpleButtonStyle"
            android:layout_below="@+id/tv_quality"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/startButtonMarginTop"/>

    </RelativeLayout>

</ScrollView>